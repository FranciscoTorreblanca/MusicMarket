<section class="contenedor-paginas">
<h2 id="genre-detail-title">Lista de descubrimiento</h2>

<div class="search-container">
    <div class="search-icon-btn">
      <i class="fa fa-search"></i>
    </div>
    <div class="search-input">

      <form action="/discover/results" method="POST">
        <input type="text" name="searchTrack" id="searchTrack" class="search-bar" placeholder="Buscar...">
      </form>
    </div>
  </div>

<div id="results">
{{#each tracks}}
<p>
  <a href="/stock/{{this.id}}">  
      <span class='res-price'>${{this.popularity}}</span>
      <span class='res-artist'>{{this.artists.[0].name}} </span>
      <span class='res-name' >{{this.name}}</span> </a>
</p>
{{/each}}
</section>
</div>